<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BudgetManagementActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar_budget"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Thiết lập Ngân sách Tháng"
        app:titleTextColor="@android:color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tháng/Năm:"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/spinner_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp" />
                <Spinner
                    android:id="@+id/spinner_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:helperText="Tổng số tiền bạn có cho tháng này (giới hạn cứng)">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_total_budget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ngân sách Tổng"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:helperText="Mục tiêu chi tiêu tối đa trong tháng">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_text_spending_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hạn mức Chi tiêu"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khoản Dự kiến Tiết kiệm:"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/text_view_expected_savings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="?attr/colorPrimary"
                tools:text="500,000 đ" />

            <Button
                android:id="@+id/button_save_budget_setup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lưu Thiết lập"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>