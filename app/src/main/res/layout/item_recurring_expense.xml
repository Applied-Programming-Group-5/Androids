<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_view_rec_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/text_view_rec_amount"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:text="Tiền thuê nhà" />
        <TextView
            android:id="@+id/text_view_rec_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold"
            android:textSize="16sp"
            tools:text="3,000,000 đ" />
    </RelativeLayout>
    <TextView
        android:id="@+id/text_view_rec_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        tools:text="Hàng tháng vào ngày 15, thuộc danh mục Nhà ở" />
</LinearLayout>